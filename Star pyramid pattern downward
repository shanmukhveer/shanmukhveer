import java.util.*;
public class starPattern  
{  
public static void main(String[] args)  
{  
int i,j,n;
Scanner sc=new Scanner(System.in);
System.out.print("\tn=");
n=sc.nextInt();
for ( i= n-1; i>=0 ; i--)  
{   
for ( j=0; j<=i; j++)  
{  

System.out.print(" *" + " ");  
}  
System.out.println();  
}  
}  
}  
